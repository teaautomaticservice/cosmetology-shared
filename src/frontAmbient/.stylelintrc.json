{
  "extends": [
    "stylelint-config-standard"
  ],
  "plugins": ["stylelint-prettier"],
  "rules": {
    "prettier/prettier": [
      true,
      {
        "semi": true,
        "singleQuote": true,
        "printWidth": 80,
        "tabWidth": 2
      }
    ],
    "color-no-invalid-hex": true,
    "block-no-empty": true,
    "no-duplicate-selectors": true,
    "selector-class-pattern": null
  }
}